package test;

import static org.junit.Assert.*;

import java.nio.file.NoSuchFileException;
import java.util.Arrays;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

import src.Recherche;

public class ChercherEltTest {

	int[] test1;
	int[] test2;
	int[] test3;
	
	@Before
	public void setUp() throws Exception {
		test1 = new int[]{5,1,5,8};
		test2 = new int[]{};
		test3 = null;
	}
	
	@Test
	public void testValeurExistante() {
		assertEquals(true, Recherche.chercherElt(1, test1));
	}
	
	@Test
	public void testValeurIndice0() {
		assertEquals(true, Recherche.chercherElt(5, test1));
	}
	
	@Test
	public void testValeurDernierIndice() {
		assertEquals(true, Recherche.chercherElt(8, test1));
	}
	
	@Test
	public void testValeurMulti() {
		assertEquals(true, Recherche.chercherElt(5, test1));
	}
	
	@Test
	public void testValeurInconnue() {
		assertEquals(false, Recherche.chercherElt(15, test1));
	}
	
	@Test
	public void testTableauVide() {
		assertEquals(false, Recherche.chercherElt(5, test2));
	}
	
	@Test
	public void testTableauNul() {
		assertEquals(false, Recherche.chercherElt(5, null));
	}

}
